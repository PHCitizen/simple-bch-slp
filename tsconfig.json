{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "lib": ["es2019"],
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
